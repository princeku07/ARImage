<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.onBoarding.screens.SecondScreen">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_320sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_gravity="center"
        android:src="@drawable/onboarding_pic"
        android:contentDescription="@string/pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Image"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Video"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:lineHeight="@dimen/_15sdp"
        android:textSize="@dimen/_12ssp"
        android:text="Simply upload your favorite Photos and Videos, that's it!"
        />

</LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/_15sdp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/darkGrey"
        android:text="@string/next"/>

</FrameLayout>